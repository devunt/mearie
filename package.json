{
  "name": "@mearie-internal/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Type-safe, zero-overhead GraphQL client",
  "keywords": [
    "graphql",
    "graphql-client",
    "typescript",
    "type-safe",
    "codegen",
    "cache",
    "normalized-cache",
    "react",
    "vue",
    "svelte",
    "solid",
    "vite"
  ],
  "homepage": "https://mearie.dev/",
  "bugs": {
    "url": "https://github.com/devunt/mearie/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devunt/mearie.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/devunt"
  },
  "license": "MIT",
  "author": "Bae Junehyeon <finn@penxle.io>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "turbo build --filter=!@mearie-internal/*",
    "build:docs": "turbo build --filter=@mearie-internal/docs",
    "build:examples": "turbo build --filter=@mearie-internal/examples-*",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "dev": "turbo dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:rust": "cargo fmt --check",
    "format:rust:fix": "cargo fmt",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:rust:fix": "cargo clippy --all-targets --all-features --fix -- -D warnings",
    "publish:prepare": "node scripts/prepare-publish.ts",
    "spellcheck": "cspell --no-progress \"**\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "turbo typecheck --filter=!@mearie-internal/*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "cspell": "^9.7.0",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.0.0",
    "eslint-plugin-unicorn": "^63.0.0",
    "globals": "^17.3.0",
    "lefthook": "^2.1.1",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "tinyglobby": "^0.2.15",
    "turbo": "^2.8.10",
    "typescript": "catalog:",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.68.1"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "engines": {
    "bun": ">=1.2.0",
    "deno": ">=2.2.0",
    "node": ">=20.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@bomb.sh/tab>citty": "*",
        "eslint-plugin-import>eslint": "*"
      }
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "lefthook",
      "sharp",
      "workerd"
    ],
    "overrides": {
      "baseline-browser-mapping": "^2.10.0"
    }
  }
}
