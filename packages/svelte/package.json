{
  "name": "@mearie/svelte",
  "version": "0.2.1",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./src/index.svelte.ts"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@mearie/core": "workspace:*"
  },
  "devDependencies": {
    "svelte": "^5.53.3",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.svelte.d.mts",
          "default": "./dist/index.svelte.mjs"
        },
        "require": {
          "types": "./dist/index.svelte.d.cts",
          "default": "./dist/index.svelte.cjs"
        }
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.svelte.cjs",
    "module": "./dist/index.svelte.mjs",
    "types": "./dist/index.svelte.d.mts"
  }
}
