{
  "name": "@mearie/codegen",
  "version": "0.0.1-next.0",
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@mearie/config": "workspace:*",
    "@mearie/core": "workspace:*",
    "@mearie/extractor": "workspace:*",
    "@mearie/native": "workspace:*",
    "picomatch": "^4.0.3",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@types/picomatch": "^4.0.2",
    "tsdown": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}
