{
  "name": "@mearie/native",
  "version": "0.2.0",
  "sideEffects": false,
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "napi build --release --output-dir=dist --platform",
    "napi:prepare": "node scripts/prepare.mts",
    "test": "cargo test --no-default-features"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "napi": {
    "binaryName": "mearie-native",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-pc-windows-msvc",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  }
}
