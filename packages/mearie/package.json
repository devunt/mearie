{
  "name": "mearie",
  "version": "0.1.6",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./vite": "./src/vite.ts"
  },
  "bin": {
    "mearie": "./src/cli.ts"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@mearie/cli": "workspace:*",
    "@mearie/config": "workspace:*",
    "@mearie/shared": "workspace:*",
    "@mearie/vite": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "bin": {
      "mearie": "./dist/cli.mjs"
    },
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./types": {
        "import": {
          "types": "./dist/types.d.mts",
          "default": "./dist/types.mjs"
        },
        "require": {
          "types": "./dist/types.d.cts",
          "default": "./dist/types.cjs"
        }
      },
      "./vite": {
        "import": {
          "types": "./dist/vite.d.mts",
          "default": "./dist/vite.mjs"
        },
        "require": {
          "types": "./dist/vite.d.cts",
          "default": "./dist/vite.cjs"
        }
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts"
  }
}
