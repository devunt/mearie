{
  "name": "@mearie/vite",
  "version": "0.1.3",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@mearie/codegen": "workspace:*",
    "@mearie/config": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vite": "^7.3.1"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "types": "./dist/index.d.mts",
          "default": "./dist/index.mjs"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./package.json": "./package.json"
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts"
  }
}
