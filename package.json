{
  "name": "@mearie/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Type-safe, zero-overhead GraphQL client",
  "keywords": [
    "graphql",
    "graphql-client",
    "typescript",
    "codegen",
    "cache"
  ],
  "homepage": "https://github.com/devunt/mearie#readme",
  "bugs": {
    "url": "https://github.com/devunt/mearie/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devunt/mearie.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/devunt"
  },
  "license": "MIT",
  "author": "Bae Junehyeon <finn@penxle.io>",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "turbo build --filter=!@mearie/docs --filter=!@mearie/examples-*",
    "build:docs": "turbo build --filter=@mearie/docs",
    "build:examples": "turbo build --filter=@mearie/examples-*",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "dev": "turbo dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:rust": "cargo fmt --check",
    "format:rust:fix": "cargo fmt",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:rust": "cargo clippy --all-targets --all-features -- -D warnings",
    "lint:rust:fix": "cargo clippy --all-targets --all-features --fix -- -D warnings",
    "publish:prepare": "node scripts/prepare-publish.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "tinyglobby": "^0.2.15",
    "turbo": "^2.5.8",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.3",
    "wrangler": "^4.45.0"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "engines": {
    "bun": ">=1.2.0",
    "deno": ">=2.2.0",
    "node": ">=20.0.0"
  }
}
